{
  "name": "@svg-character-engine/audit-core",
  "version": "1.0.0",
  "description": "Enterprise-grade audit and logging core - ES6 modules",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs",
      "default": "./index.js"
    },
    "./internal": {
      "import": "./internal/index.js",
      "default": "./internal/index.js"
    }
  },
  "keywords": [
    "logging",
    "enterprise"
  ],
  "scripts": {
    "test": "node ./tests/run-all-tests.js",
    "test:basic": "node ./tests/basic.test.js",
    "test:core": "node ./tests/core.test.js",
    "lint": "eslint index.js core/**/*.js config/**/*.js context/**/*.js error-handling/**/*.js rate-limiting/**/*.js sanitizer/**/*.js sync/**/*.js transports/**/*.js utils/**/*.js tests/**/*.js scripts/**/*.js eslint.config.js",
    "lint:ci": "npm run lint --silent -- --max-warnings=0",
    "lint:md": "npx markdownlint-cli2 \"**/*.md\" \"!coverage/**\" \"!node_modules/**\" --config .markdownlint.json",
    "lint:md:fix": "npx markdownlint-cli2-fix \"**/*.md\" \"!coverage/**\" \"!node_modules/**\" --config .markdownlint.json",
    "format": "prettier --write .",
    "coverage": "c8 --reporter=lcov --reporter=text-summary --reports-dir=coverage node ./tests/run-all-tests.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "nyc": "^15.1.0",
    "c8": "^10.1.2"
  }
}
