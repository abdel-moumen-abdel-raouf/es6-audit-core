{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run basic tests",
			"type": "shell",
			"command": "node ./tests/basic.test.js",
			"args": [],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run all tests",
			"type": "shell",
			"command": "node",
			"args": [
				"./tests/run-all-tests.js"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Lint only sources",
			"type": "shell",
			"command": "eslint",
			"args": [
				"index.js",
				"core/**/*.js",
				"config/**/*.js",
				"context/**/*.js",
				"error-handling/**/*.js",
				"rate-limiting/**/*.js",
				"sanitizer/**/*.js",
				"sync/**/*.js",
				"transports/**/*.js",
				"utils/**/*.js",
				"tests/**/*.js"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}